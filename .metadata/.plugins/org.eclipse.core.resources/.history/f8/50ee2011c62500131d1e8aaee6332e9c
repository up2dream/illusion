package illusion.base;

/**
 * @author HuBin1
 * Homogeneous Point
 */
public class HPoint {
	
	// ===========================================================
	// Constants
	// ===========================================================

	// ===========================================================
	// Fields
	// ===========================================================

	protected float tuple[] = new float[4];
	
	// ===========================================================
	// Constructors
	// ===========================================================

	public HPoint() {
		tuple[3] = 1f;
	}
	
	public HPoint(float x, float y, float z) {
		this();
		
		tuple[0] = x;
		tuple[1] = y;
		tuple[2] = z;
	}
	
	// ===========================================================
	// Getter & Setter
	// ===========================================================

	// ===========================================================
	// Methods for/from SuperClass/Interfaces
	// ===========================================================

	// ===========================================================
	// Methods
	// ===========================================================

	// ===========================================================
	// Inner and Anonymous Classes
	// ===========================================================

}
